<h1>Eat-Da-Burger!</h1>
<img src="../public/assets/burger.jpeg" alt="burger">

<div class="col-lg-6">
  <h2>Burger List:</h2>
  <ul>
    {{#each burger}}
      {{#unless devour}}
        {{> burgers/burger-block devour=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-lg-6">
  <h2>Devoured Burger List:</h2>
  <ul>
    {{#each burger}}
      {{#if devour}}
        {{> burgers/burger-delete devour=false}}
        
      {{/if}}
    {{/each}}
  </ul>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
  <br><br><br>
  <p>Enter a burger you want to eat. Click the Submit button.</p>
</form>