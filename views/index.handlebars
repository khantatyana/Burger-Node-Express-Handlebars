<h1>Eat-Da-Burger!
  <img src="/assets/burger.jpeg" alt="burger" width="200">
</h1>


<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    {{!-- <input type="text" id="burg" name="burger_name"> --}}
    <textarea name="burger_name" id="burg" rows="5" placeholder="Enter a burger you want to eat. 
    Click the Add Burger button."></textarea>
  </div>

  <button type="submit">Add Burger</button>
  <br><br><br>
</form>

<div class="grid-container">
  <div class="col-md-6">
    <h2>Burger List:</h2>
    <ul class="list-group">

      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}

    </ul>
  </div>

  <div class="col-md-6">
    <h2>Devoured Burger List:</h2>
    <ul class="list-group">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


